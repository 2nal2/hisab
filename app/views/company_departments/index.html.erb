<p id="notice"><%= notice %></p>

<h1>Company Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_departments.each do |company_department| %>
      <tr>
        <td><%= company_department.name %></td>
        <td><%= link_to 'Show', company_department %></td>
        <td><%= link_to 'Edit', edit_company_department_path(company_department) %></td>
        <td><%= link_to 'Destroy', company_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

