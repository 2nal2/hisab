<section class="form-title">
  <div class="container">
    <% # Title %>
    <div class="row title-container">
      <div class="col-xs-12 col-lg-10">
        <% # Heading %>
        <h1>
          <i class="fas fa-plus"></i>
          Nuevo
        </h1>
        <% # End Heading %>
      </div>
      <div class="col-xs-12 col-lg-2">
        <% # Categories button %>
        <div class="btn-container">
          <%= link_to (countries_path), class: "btn btn-general" do %>
            <i class="fas fa-list-alt"></i>
            <span>
              paises
            </span>
          <% end %>
        </div>
        <% # End Categories button %>
      </div>
    </div>
    <% # End Title %>
    <% # Breadcrumb %>
    <div class="row">
      <div class="col-xs-12 hidden-xs">
        <div class="breadcrumb-container">
          <ol class="breadcrumb">
            <li>
              <%= link_to (root_path) do %>
                <i class="fas fa-tachometer-alt"></i>
                <span>
                  dashboard
                </span>
              <% end %>
            </li>
            <li>
              <%= link_to (countries_path) do %>
                <i class="fas fa-list-alt"></i>
                <span>
                  paises
                </span>
              <% end %>
            </li>
            <li class="active">
              <i class="fas fa-plus"></i>
              Crear
            </li>
          </ol>
        </div>
      </div>
    </div>
    <% # End Breadcrumb %>
  </div>
</section>
<%= render "form", country: @country%>
