<%= form_for @country, html: {autocomplete: "off"} do |f| %>
  <section class="form">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= render partial: "partials/form_errors", locals: {resource: @country, model: Test} %>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-12">
          <% # Material card %>
          <div class="material-card shadow-card">
            <div class="row no-margin">
              <div class="col-xs-12 no-padding">
                <div class="form-info">
                  <div class="form-group">
                    <%= f.text_field :country_name, class: "form-control input", placeholder: "nombre", required: true %>
                    <label>
                      <b>
                        <%= t("activerecord.attributes.test.title") %>
                      </b>
                    </label>
                    <div class="border-bottom"></div>
                  </div>
                  <% # Buttons %>
                  <div class="main-buttons">
                    <div class="col-xs-12 col-sm-12 button-container no-padding">
                      <%= button_tag type: "reset", id: "reset-button", class: "btn btn-general" do %>
                        <i class="fas fa-eraser"></i>
                        <span>Limpiar</span>
                      <% end %>
                      <%= f.button class: "btn btn-general", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i>"} do %>
                        <i class="fas fa-save"></i>
                        <span>Guardar</span>
                      <% end %>
                    </div>
                  </div>
                  <% # End Buttons %>
                </div>
              </div>
            </div>
          </div>
          <% # End Material card %>
        </div>
      </div>
    </div>
  </section>
<% end %>
<% # End Form %>


