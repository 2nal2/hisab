<p id="notice"><%= notice %></p>

<h1>Customer Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_categories.each do |customer_category| %>
      <tr>
        <td><%= customer_category.category_name %></td>
        <td><%= link_to 'Show', customer_category %></td>
        <td><%= link_to 'Edit', edit_customer_category_path(customer_category) %></td>
        <td><%= link_to 'Destroy', customer_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer Category', new_customer_category_path %>
